<Page
    x:Class="WarGames.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WarGames"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">
    <StackPanel VerticalAlignment="Center">
        <Button Name="New" FontSize="60" HorizontalAlignment="Center" Margin="20" Click="New_Click">Nowa Symulacja</Button>
        <Button Name="Load" FontSize="60" HorizontalAlignment="Center" Margin="20" Click="Load_Click">Wczytaj Symulację</Button>
        <Button Name="Stats" FontSize="60" HorizontalAlignment="Center" Margin="20" Click="Stats_Click">Statystyki</Button>
        <Button Name="About" FontSize="60" HorizontalAlignment="Center" Margin="20" Click="About_Click">O Aplikacji</Button>
    </StackPanel>
</Page>

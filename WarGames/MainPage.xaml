<Page
    x:Class="WarGames.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:WarGames"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <NavigationView x:Name="nvTopLevelNav"
                Loaded="nvTopLevelNav_Loaded"
                Margin="0,12,0,0"
                SelectionChanged="nvTopLevelNav_SelectionChanged"
                ItemInvoked="nvTopLevelNav_ItemInvoked"
                IsTabStop="False"
                Header="GRY WOJENNE">
        <NavigationView.MenuItems>
            <NavigationViewItem Icon="Home" Content="Home" Tag="Home_Page" />
            <NavigationViewItem Icon="Flag" Tag="Battle_Simulation">
                <TextBlock Tag="Battle_Simulation">Symulacja Bitwy</TextBlock>
            </NavigationViewItem>
            <NavigationViewItem Icon="Placeholder" Content="TODO" Tag="TODO_Page" />
            <NavigationViewItem Icon="Help" Content="O Aplikacji" Tag="About_Page" />
        </NavigationView.MenuItems>
        <Frame x:Name="contentFrame"></Frame>
    </NavigationView>
    
</Page>
